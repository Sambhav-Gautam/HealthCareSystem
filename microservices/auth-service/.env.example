# Auth Service Configuration
# Copy this file to .env and fill in your actual values

# Server
PORT=5001
NODE_ENV=development

# MongoDB - Auth Database
MONGO_URI=mongodb://localhost:27017/hcl_auth_db

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_chars
JWT_EXPIRE=24h
JWT_REFRESH_SECRET=your_refresh_token_secret_key_change_this_in_production_min_32_chars
JWT_REFRESH_EXPIRE=7d

# Email Configuration (Nodemailer with Gmail)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password
EMAIL_FROM=HCL Healthcare <your_email@gmail.com>

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Rate Limiting
AUTH_RATE_LIMIT_WINDOW=15
AUTH_RATE_LIMIT_MAX=5
GENERAL_RATE_LIMIT_WINDOW=15
GENERAL_RATE_LIMIT_MAX=100

# Verification Code Settings
VERIFICATION_CODE_EXPIRES=10
RESET_PASSWORD_CODE_EXPIRES=10

